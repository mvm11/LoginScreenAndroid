<resources>

    <style name="Widget.Theme.Plant.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Plant.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- Pantalla inicial splash. -->
    <style name="NameApp" parent="">
        <item name="android:layout_width">254dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:textSize">44sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">#50b568</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mustica</item>
        <item name="android:textAlignment">center</item>

    </style>
    <style name="name_inicio" parent="NameApp">
        <item name="android:layout_width">254dp</item>
        <item name="android:layout_height">63dp</item>
    </style>

    <style name="ImageLogo" parent="">
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">309dp</item>
    </style>
    <style name="TextViewUser" parent="">
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">370dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <!-- Pantalla login parte sup -->
    <style name="superior_layout" parent="">
        <item name="android:layout_width">389dp</item>
        <item name="android:layout_height">173dp</item>
    </style>
    <style name="hojasup" parent="">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
    </style>

    <!-- Pantalla login parte inferior -->
    <style name="inferior_layout" parent="">
        <item name="android:layout_width">390dp</item>
        <item name="android:layout_height">549dp</item>
    </style>

    <style name="text_account" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mustica</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="inputs" parent="">
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mustica</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_forget" parent="text_account">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="butons" parent="inputs">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">57dp</item>
    </style>

    <style name="text_have" parent="text_forget">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">50dp</item>

    </style>

    <style name="social_media" parent="">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="buttons_without" parent="butons">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>